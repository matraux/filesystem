<?xml version="1.0"?>
<ruleset>

	<arg name="extensions" value="php"/>
	<arg name="encoding" value="utf-8"/>
	<arg value="ps"/>
	<arg name="cache" value="/tmp/phpcs.cache"/>
	<arg name="warning-severity" value="0"/>

	<exclude name="Squiz.WhiteSpace.LanguageConstructSpacing"/>

	<rule ref="./vendor/contributte/qa/ruleset-8.4.xml">
		<exclude name="SlevomatCodingStandard.Classes.DisallowMultiPropertyDefinition"/>
		<exclude name="Squiz.WhiteSpace.LanguageConstructSpacing"/>
	</rule>

	<rule ref="Generic.WhiteSpace.LanguageConstructSpacing"/>

	<rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
		<properties>
			<property name="rootNamespaces" type="array">
				<element key="src" value="Matraux\FileSystem"/>
				<element key="tests" value="Matraux\FileSystemTest"/>
			</property>
		</properties>
	</rule>

	<file>src</file>
	<file>tests</file>

</ruleset>
